version: '3.9'
services:
  webapp:
    container_name: webapp
    image: python:3.11-slim
    working_dir: /app
    volumes:
      - {{ app_dir }}/webapp:/app:ro
    environment:
      - PYTHONDONTWRITEBYTECODE=1
      - PYTHONUNBUFFERED=1
      - DATABASE_URL=postgresql://{{ db_user }}:{{ db_password | urlencode }}@{{ db_host }}:{{ db_port }}/{{ db_name }}
    expose:
      - "5000"
    restart: unless-stopped
    command: >-
      bash -lc "gunicorn -b 0.0.0.0:5000 app:app"
    healthcheck:
      test: ["CMD-SHELL", "curl -f http://localhost:5000/ || exit 1"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 40s

  nginx:
    image: nginx:stable-alpine
    container_name: nginx
    depends_on:
      - webapp
    volumes:
      - {{ app_dir }}/nginx/nginx.conf:/etc/nginx/nginx.conf:ro
    ports:
      - "80:80"
    restart: unless-stopped